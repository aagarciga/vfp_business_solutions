<?xml version="1.0"?>

<!DOCTYPE Application SYSTEM "settings.dtd">
<Application Name="VFP Business Series" Controller="main" Action="index" State="Development" >
    <Pager ItemsPerPage="50" />
    <PickTicket ItemsPerPage="10" />
    <DB Name="vfpdata.add" Manager="AdvantageODBC" Host="\Fermen\VFPAcct\" User="" Password="" ServerType="Local"/>
    <!--<DB Name="dat00.add" Manager="AdvantageODBC" Host="\Fermen\VFPAcct\DAT00\" User="" Password="" ServerType="Local"/>-->
    <Company id="default">
        <Menu>
            <MenuEntry controller="Main" action="Index" class="glyphicon glyphicon-home">Home</MenuEntry>
            <MenuEntry controller="QuoteDashboard" action="Index" class="glyphicon glyphicon-th">Quote Dashboard</MenuEntry>
            <MenuEntry controller="Dashboard" action="Index" class="glyphicon glyphicon-th">Work Order Dashboard</MenuEntry>
            <MenuEntry controller="InventoryDashboard" action="Index" class="glyphicon glyphicon-th">Inventory Dashboard</MenuEntry>
            <MenuEntry controller="EquipmentDashboard" action="Index" class="glyphicon glyphicon-th">Equipment Dashboard</MenuEntry>
            <MenuEntry controller="FinancialDashboard" action="Index" VisibilityCondition="ShowFiancialDashboard" class="glyphicon glyphicon-th">Financial Dashboard</MenuEntry>
            <MenuEntry controller="WMS" action="Index" VisibilityCondition="$FullFeatures" class="glyphicon glyphicon-th">Warehouse Management</MenuEntry>
            <MenuEntry controller="WMS" action="User" class="glyphicon glyphicon-th">Exit</MenuEntry>
        </Menu>
        <Controller name="default" type="Dashboard">
            <Attachments>
                <FileStructure>
                    <Dir name="Freights"></Dir>
                    <Dir name="Miscellaneous"></Dir>
                    <Dir name="POs and Invoices from OMG"></Dir>
                    <Dir name="POs and Invoices from WMS"></Dir>
                    <Dir name="Quotation-PO-Invoice"></Dir>
                    <Dir name="Reports and Files"></Dir>
                    <Dir name="Time Sheets"></Dir>
                    <Dir name="Tool Box"></Dir>
                    <Dir name="Travel Expenses"></Dir>
                </FileStructure>
            </Attachments>
            <Predicate>
            </Predicate>
        </Controller>

        <Controller id="InventoryDashboard" type="Dashboard">
            <Predicate id="default">
                LOWER(TRIM(ITEMTYPE)) = 'inventory' OR LOWER(TRIM(ITEMTYPE)) = 'group' OR
                LOWER(TRIM(ITEMTYPE)) = 'kit' OR LOWER(TRIM(ITEMTYPE)) = 'toplvlassy' OR LOWER(TRIM(ITEMTYPE)) = 'subassy' OR
                LOWER(TRIM(ITEMTYPE)) = 'rawmatrl' OR LOWER(TRIM(ITEMTYPE)) = 'component'
            </Predicate>
        </Controller>
    </Company>


</Application>
