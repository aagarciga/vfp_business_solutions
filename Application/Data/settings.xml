<?xml version="1.0"?>

<!DOCTYPE Application SYSTEM "settings.dtd">
<Application Name="VFP Business Series" Controller="main" Action="index" State="Development" >
    <Pager ItemsPerPage="50" />
    <PickTicket ItemsPerPage="10" />
    <DB Name="vfpdata.add" Manager="AdvantageODBC" Host="\Fermen\VFPAcct\" User="" Password="" ServerType="Local"/>
    <!--<DB Name="dat00.add" Manager="AdvantageODBC" Host="\Fermen\VFPAcct\DAT00\" User="" Password="" ServerType="Local"/>-->
    <Company id="default">
        <Menu>
            <MenuEntry Controller="Main"                Action="Index" ClassName="glyphicon glyphicon-home">Home</MenuEntry>
            <MenuEntry Controller="QuoteDashboard"      Action="Index" ClassName="glyphicon glyphicon-th">Quote Dashboard</MenuEntry>
            <MenuEntry Controller="Dashboard"           Action="Index" ClassName="glyphicon glyphicon-th">Work Order Dashboard</MenuEntry>
            <MenuEntry Controller="InventoryDashboard"  Action="Index" ClassName="glyphicon glyphicon-th">Inventory Dashboard</MenuEntry>
            <MenuEntry Controller="EquipmentDashboard"  Action="Index" ClassName="glyphicon glyphicon-th">Equipment Dashboard</MenuEntry>
            <MenuEntry Controller="FinancialDashboard"  Action="Index" ClassName="glyphicon glyphicon-th"   VisibilityCondition="ShowFiancialDashboard" >Financial Dashboard</MenuEntry>
            <MenuEntry Controller="WMS"                 Action="Index" ClassName="glyphicon glyphicon-th"   VisibilityCondition="$FullFeatures" >Warehouse Management</MenuEntry>
            <MenuEntry Controller="WMS"                 Action="User"  ClassName="glyphicon glyphicon-th">Exit</MenuEntry>
        </Menu>
        <Controller Name="default" Type="Dashboard">
            <Attachments>
                <FileStructure>
                    <Dir Name="Freights"></Dir>
                    <Dir Name="Miscellaneous"></Dir>
                    <Dir Name="POs and Invoices from OMG"></Dir>
                    <Dir Name="POs and Invoices from WMS"></Dir>
                    <Dir Name="Quotation-PO-Invoice"></Dir>
                    <Dir Name="Reports and Files"></Dir>
                    <Dir Name="Time Sheets"></Dir>
                    <Dir Name="Tool Box"></Dir>
                    <Dir Name="Travel Expenses"></Dir>
                </FileStructure>
            </Attachments>
            <Predicate>
            </Predicate>
        </Controller>

        <Controller Name="InventoryDashboard" Type="Dashboard">
            <Predicate Id="default">
                LOWER(TRIM(ITEMTYPE)) = 'inventory' OR LOWER(TRIM(ITEMTYPE)) = 'group' OR
                LOWER(TRIM(ITEMTYPE)) = 'kit' OR LOWER(TRIM(ITEMTYPE)) = 'toplvlassy' OR LOWER(TRIM(ITEMTYPE)) = 'subassy' OR
                LOWER(TRIM(ITEMTYPE)) = 'rawmatrl' OR LOWER(TRIM(ITEMTYPE)) = 'component'
            </Predicate>
        </Controller>
    </Company>


</Application>
